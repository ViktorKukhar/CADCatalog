<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="d-flex justify-content-center align-items-center container w-25 mt-lg-5" >
    <div class="row g-3">
      <h1 class="mb-3 text-center">Please sign up</h1>
      <div class="col-sm-6">
        <%= f.label :first_name, "First name", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control", id: "firstName" %>
      </div>

      <div class="col-sm-6">
        <%= f.label :last_name, "Last name", class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control", id: "lastName" %>
      </div>

      <div class="col-12">
        <%= f.label :username, "Username", class: "form-label" %>
        <div class="input-group has-validation">
          <span class="input-group-text">@</span>
          <%= f.text_field :username, class: "form-control", id: "username", placeholder: "Username" %>
          <div></div>
        </div>
      </div>

      <div class="col-12">
        <%= f.label :email, "Email", class: "form-label"  %>
        <%= f.email_field :email, class: "form-control", id: "email", placeholder: "name@example.com" %>
      </div>

      <div class="col-12">
        <%= f.label :position, "Position", class: "form-label"  %>
        <%= f.text_field :position, class: "form-control", id: "email", placeholder: "CAD 3D Engineer" %>
      </div>

      <div class="col-12">
        <%= f.label :password, "Password", class: "form-label"  %>
        <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Your password" %>
      </div>

      <div class="col-12">
        <%= f.password_field :password_confirmanion, class: "form-control", id: "password", placeholder: "Password confirmation" %>
      </div>

      <div class="col-md-5">
        <%= f.label :avatar, "Avatar", class: "form-label"  %>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>

      <%= f.submit "Sign up", class: "w-100 btn btn-primary btn-lg"%>

    </div>
  </div>
<% end %>
